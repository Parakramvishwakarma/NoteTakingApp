<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        >

        <TextView
            android:id="@+id/textViw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/note_taker"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.275" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.450" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.625" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.8" />

        <LinearLayout
            android:id= "@+id/note1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline1"
            app:layout_constraintBottom_toTopOf="@id/guideline2"
            android:visibility= "visible">

            <Button
                android:id="@+id/note1View"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/mybutton"
                android:text="@string/note_1"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note1Edit"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/edit_button"
                android:src="@android:drawable/ic_menu_edit"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note1Delete"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/deletebutton"
                android:src="@android:drawable/ic_menu_delete"
                android:textSize="30sp"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="#FFFFFF" />
                />

        </LinearLayout>

        <LinearLayout
            android:id= "@+id/note2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline2"
            app:layout_constraintBottom_toTopOf="@id/guideline3"
            android:visibility= "visible">

            <Button
                android:id="@+id/note2View"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/mybutton"
                android:text="@string/note_2"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note2Edit"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/edit_button"
                android:src="@android:drawable/ic_menu_edit"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note2Delete"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/deletebutton"
                android:src="@android:drawable/ic_menu_delete"
                android:textSize="30sp"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="#FFFFFF" />
            />

            />
        </LinearLayout>

        <LinearLayout
            android:id= "@+id/note3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline3"
            app:layout_constraintBottom_toTopOf="@id/guideline4"
            android:visibility= "visible">

            <Button
                android:id="@+id/note3View"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/mybutton"
                android:text="@string/note_3"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note3Edit"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/edit_button"
                android:src="@android:drawable/ic_menu_edit"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note3Delete"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/deletebutton"
                android:src="@android:drawable/ic_menu_delete"
                android:textSize="30sp"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="#FFFFFF" />
            />

            />
        </LinearLayout>

        <LinearLayout
            android:id= "@+id/note4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline4"
            app:layout_constraintBottom_toTopOf="@id/guideline5"
            android:visibility= "visible">

            <Button
                android:id="@+id/note4View"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/mybutton"
                android:text="@string/note_4"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note4Edit"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/edit_button"
                android:src="@android:drawable/ic_menu_edit"
                android:textSize="30sp" />

            <ImageButton
                android:id="@+id/note4Delete"
                android:layout_width="0dp"
                android:layout_height="49dp"
                android:layout_weight="1"
                android:background="@drawable/deletebutton"
                android:src="@android:drawable/ic_menu_delete"
                android:textSize="30sp"
                app:iconPadding="0dp"
                app:iconSize="30dp"
                app:iconTint="#FFFFFF" />
            />

            />
        </LinearLayout>

        <Button
            android:id="@+id/addNote"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/add_button"
            android:drawableLeft="@android:drawable/ic_menu_upload_you_tube"
            android:text="Add Note"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline5"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>